@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="row center justify-content-center align-items-center">
    <div class="blurred-card col-md-12">
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <h1>Confirm your registration</h1>
                <hr />
                <p>
                    This app does not currently have a real email sender registered.
                    <br><a class="btn btn-warning m-3" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            }
            else
            {
                <p>
                    Please check your email to confirm your account.
                </p>
            }
        }

    </div>
</div>


