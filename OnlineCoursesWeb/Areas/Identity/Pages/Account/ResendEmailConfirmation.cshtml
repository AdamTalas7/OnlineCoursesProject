@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}


<div class="row center justify-content-center align-items-center">
    <div class="blurred-card col-md-4">
        <h1>@ViewData["Title"]</h1>
        <h4>Enter your email.</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3 col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="Input.Email" for="floatingInput">Email address</label>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning col-md-12">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
