@{ ViewData["Title"] = "Home Page"; }
@{ ViewBag.Current = "Home"; }

<div class="my-5 align-items-center">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="my-3">Welcome to Online Courses</h1>
            <h5>Log in, or register either as a student to find teachers or as a teacher to offer one-to-one classes to students online!</h5>
            <p class="my-3">On our site you can find teachers to help with tutoring, coaching, and projects for a wide variety of subjects.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-outline-dark shadow-lg my-5" asp-area="" asp-controller="Teachers" asp-action="">Go to teachers</a>
            }
            else
            {
                <a class="btn btn-outline-dark shadow-lg my-5" asp-area="Identity" asp-page="/Account/Login">Get started</a>
            }
            <a class="btn btn-outline-dark shadow-lg my-5" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
        </div>
        <div class="col-md-6 align-items-center">
            <img src="~/business-3d-stack-of-different-books.png" alt="stackedBooks" class="mx-5" style="width: 85%">
        </div>
    </div>
</div>

